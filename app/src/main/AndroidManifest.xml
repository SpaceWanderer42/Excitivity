<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Excitivity"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Planner">
        <activity android:name=".User_Activity"></activity>
        <activity android:name=".CreateActivity" />
        <activity
            android:name=".Profile"
            android:launchMode="singleTask" />
        <activity android:name=".Study" />
        <activity android:name=".Self_Care" />
        <activity android:name=".Workout" />
        <activity
            android:name=".Display_Task"
            android:noHistory="true" />
        <activity android:name=".Cooking" />
        <activity
            android:name=".CalendarActivity"
            android:launchMode="singleTask" />
        <activity android:name=".Login.LogInActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Excitivity"
            android:theme="@style/Theme.Planner.NoActionBar" />
        <activity android:name=".Login.SignUpActivity" />
        <activity
            android:name=".ProgramsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>