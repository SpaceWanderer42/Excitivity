<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8fbdbc"
    tools:context=".ProgramsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            app:cardCornerRadius="20sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BED5ED"
                android:orientation="vertical"
                android:weightSum="1">


                <TextView
                    android:id="@+id/Welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="110dp"
                    android:textColor="@color/blue_writing"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/imageView12"
                    android:paddingStart="10dp"
                    android:textColor="#f7208f"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:onClick="openProfile"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ic_sun" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:columnCount="2"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/Cooking"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#FFFF99"
                app:cardCornerRadius="20sp">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageCooking"
                        android:layout_width="82dp"
                        android:layout_height="78dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_cooking">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageCooking"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Cooking"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Workout"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#FFFF99"
                app:cardCornerRadius="20sp">

                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageWorkout"
                        android:layout_width="82dp"
                        android:layout_height="78dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_yoga">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageWorkout"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Workout"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Self_Care"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#FFFF99"
                app:cardCornerRadius="20sp">

                <RelativeLayout
                    android:id="@+id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageSelf_Care"
                        android:layout_width="82dp"
                        android:layout_height="78dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_self_care">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageSelf_Care"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Self Care"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Study"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10sp"
                app:cardBackgroundColor="#FFFF99"
                app:cardCornerRadius="20sp">

                <RelativeLayout
                    android:id="@+id/relative4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageStudy"
                        android:layout_width="82dp"
                        android:layout_height="78dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_reading">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageStudy"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Study"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:backgroundTint="#29968F"
            android:tint="#29968F"
            app:backgroundTint="#F0ECE3"
            app:rippleColor="#29968F"
            app:srcCompat="@android:drawable/ic_input_add" />
    </LinearLayout>
</ScrollView>