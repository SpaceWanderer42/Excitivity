<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Planner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sort_of_blue</item> <!-- era indian_khaki-->
        <item name="colorPrimaryVariant">@color/teal_700</item>  <!-- era bone-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font Style -->
        <item name="android:textViewStyle">@style/LoraTextViewStyle</item>
        <item name="android:buttonStyle">@style/LoraButtonStyle</item>
        <!-- Background -->
<!--        <item name="android:background">@color/blue_background</item>-->
    </style>

    <style name="Theme.Planner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Planner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Planner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoraTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lora</item>
    </style>

    <style name="LoraButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/lora</item>
    </style>

</resources>